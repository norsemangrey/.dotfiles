[includeIf "gitdir:~/workspace/work/repos/"]
    path = ~/workspace/work/.gitconfig-work
[includeIf "gitdir:~/workspace/personal/repos/"]
    path = ~/workspace/personal/.gitconfig-personal

[pull]

    # Performs merge operation on pull
    rebase = false

    # Prevents Fast-Forward (ensuring merge commits are made even if remote is not ahead of local)
    #ff = false

[http]

    # Sets timeout on HTTP requests
    timeout = 30

